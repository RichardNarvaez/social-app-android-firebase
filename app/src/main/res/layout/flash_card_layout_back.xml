<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardProduct2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="2dp"
    android:layout_marginStart="2dp"
    android:transitionName="card_product"
    app:cardCornerRadius="14dp"
    app:cardElevation="0dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.richardnarvaez.up.View.SquareImageView
            android:id="@+id/post_photo2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:background="@color/colorSecundary"
            android:scaleType="centerCrop"
            android:transitionName="img_product" />

        <!--<ec.pikapstudio.nefty.View.SquareImageView-->
        <!--android:id="@+id/shader2"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:background="@drawable/degraded_shader"-->
        <!--android:transitionName="img_shader" />-->

        <TextView
            android:id="@+id/text_Price2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="103dp"
            android:padding="8dp"
            android:text="Pregunta"
            android:textColor="@color/colorTextPrimaryLight"
            android:textSize="32dp"
            android:textStyle="bold"
            android:transitionName="txt_price" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/post_photo2"
            android:layout_alignParentStart="true"
            android:layout_margin="8dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#099FFF"
                    android:text="A"
                    android:textColor="@color/colorWhite" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/colorWhite"
                    android:text="B" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:backgroundTint="#a5ff64"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="A" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/colorPrimary"
                    android:text="D"
                    android:textColor="@color/colorWhite" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/post_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_Price2"
            android:layout_centerHorizontal="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="Loading..."
            android:textAllCaps="false"
            android:textColor="@color/colorTextPrimaryLight"
            android:textSize="16sp"
            android:textStyle="bold"
            android:transitionName="txt_title" />
    </RelativeLayout>

</android.support.v7.widget.CardView>