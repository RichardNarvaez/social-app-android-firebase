<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="100dp"
        android:layout_height="152.5dp"
        android:layout_centerVertical="true"
        app:cardCornerRadius="8dp"
        app:cardUseCompatPadding="true">

        <ImageView
            android:id="@+id/backImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/content_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="8dp">

                <!--android:background="@drawable/chip_border_profile"-->

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/thumbUser"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_margin="2dp" />

            </RelativeLayout>

            <TextView
                android:id="@+id/txtPosition"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignBottom="@+id/content_profile"
                android:layout_alignEnd="@+id/content_profile"
                android:background="@drawable/chip_border_wb"
                android:gravity="center"
                android:text="97"
                android:textColor="@color/colorWhite"
                android:textSize="8sp"
                android:textStyle="bold" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>